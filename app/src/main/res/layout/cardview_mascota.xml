<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tvContacto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    android:layout_gravity="center_horizontal"
    card_view:cardElevation="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <ImageView
            android:id="@+id/imgFoto"
            android:src="@drawable/perro1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"


            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/btnBone"
                android:background="@drawable/dog_bone_48"
                android:layout_gravity="left"
                />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/left"


            >

            <TextView
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvNombreCV"
                android:text="@string/pnombre"
                android:textSize="@dimen/nombre_cardview"
                android:textAlignment="center"
                />

        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRate"
                android:text="4"
                android:layout_gravity="right"
                />

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/btnRate"
                android:background="@drawable/dog_bone_48_yellow"
                android:layout_gravity="right"
                />

       </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>